---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import BlogListItem from '../components/BlogListItem.astro';
import ImageContainer from '../components/ImageContainer.astro';
import { Image } from 'astro:assets';
import PortfolioEN from '../assets/images/PortfolioCover/Employee Navigator@2x.png'
import PortfolioBrivo from '../assets/images/PortfolioCover/Brivo@2x.png'
import PortfolioElo from '../assets/images/PortfolioCover/Elo@2x.png'
import PortfolioShadow from '../assets/images/PortfolioCover/Shadow@2x.png'
---

<Layout title="Matt Richards, Product Designer">
	<main>
		<h1>Hi, I'm Matt Richards</h1>

		<p class="intro">I'm a designer who likes coding HTML & CSS, taking <strike>cat</strike> photos, filming videos, sharing Figma tips, and talking about product design.</p>

		<p class="intro">Building websites is my happy place.</p>

		<p class="secondary">Website under construction</p>
		<p class="secondary">Currently making this project way too complicated.</p>
			
		<ul role="list" class="blog-list">
			<BlogListItem
				href="https://www.figma.com/proto/n644wvluQVK1le8o5qpbJQ/Matt-Richards-Portfolio-(Public)?page-id=0%3A1&node-id=330-900&viewport=1214%2C905%2C0.12&scaling=min-zoom&starting-point-node-id=330%3A900"
				title="View Portfolio Prototype"
				date="Interactive Figma Prototype"
			/>
		</ul>

		<section class="portfolio">
			<h2>Portfolio is coming soon</h2>

			<ImageContainer
				title="Employee Navigator"
				href="/work/employee-navigator"
				body="2022 - Current">
				<Image src={PortfolioEN} alt="Thumbnail of UI Mockups from Employee Navigator" style="object-fit: cover; height: 100%; width: 100%;" />
			</ImageContainer>

			<ImageContainer
				title="Brivo"
				body="2020 - 2022"
				textClass="onDark"
				cssClass="isComingSoon"
				>
				<Image src={PortfolioBrivo} alt="Thumbnail of UI Mockups from Brivo" style="object-fit: cover; height: 100%; width: 100%;" />
			</ImageContainerDark>
			
			<ImageContainer
				title="Elo"
				body="2019 - 2020"
				textClass="onDark"
				cssClass="isComingSoon">
				<Image src={PortfolioElo} alt="Thumbnail of UI Mockups from Elo" style="object-fit: cover; height: 100%; width: 100%;"  />
			</ImageContainerDark>
			
			<ImageContainer
				title="Shadow"
				body="2016 - 2019"
				textClass="onDark"
				cssClass="isComingSoon">
				<Image src={PortfolioShadow} alt="Thumbnail of UI Mockups from Shadow" style="object-fit: cover; height: 100%; width: 100%;"  />
			</ImageContainerDark>

		</section>
	</main>
</Layout>

<style lang="scss">
$text-color-primary: #333131;
$text-color-muted: #6B6766;
$secondary-color-accent: #716FD3;

	main {
		margin: 140px auto;
		padding: 1.5rem;
		max-width: 540px;
	}
	h1, h2 {
		font-style: normal;
		font-weight: 600;
		font-size: 24px;
		line-height: 28px;
		margin: 0;
	}
	ul { margin: 0; padding: 0; }
	p.intro { 
		color: $text-color-primary;
		font-style: normal;
		font-weight: 400;
		font-size: 24px;
		line-height: 32px;
		/* or 133% */
		letter-spacing: 0.02em;
	}
	p.secondary { color: $text-color-muted; }

	.portfolio { 
		margin-top: 3rem;
		a img {
			display: block;
			width: 580px;
			height: 200px;
			border-radius: 12px;
			overflow: hidden;
			box-shadow: 0px 4px 16px rgba(11, 12, 21, 0.0);
			transition: box-shadow 0.2s ease-in-out;
		}
		a:hover img {
			box-shadow: 0px 4px 16px rgba(11, 12, 21, 0.1);
		}
	}
</style>
