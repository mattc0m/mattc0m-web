---
import ImageContainerStatic from '@components/ImageContainerStatic.astro';
export interface Props {
	title?: string;
    href?: string;
    thumbnailUrl?: string;
    cssClass?: string;
    thumbnailWidth?: string;
    thumbnailHeight?: string;
}
const { title, href, cssClass, thumbnailWidth = "320px", thumbnailHeight = "170px", thumbnailUrl } = Astro.props;
---

<a class:list={[ 'CodeSnippet', cssClass ]} href={href} target="_blank">
    <img src={thumbnailUrl} alt="{title}" />
    {/* lost the image zoom-in effect when we removed imagecontainerstatic compontent. look to re-add some sort of effect like zoom-in. probably match with other image hover effects */}
    <div class="title">
        {title}
    </div>
</a>

<style lang="scss" define:vars={{ thumbnailWidth }}>
    .CodeSnippet {
        max-width: var(--thumbnailWidth);
        text-decoration: none;
        display: inline-flex;
        flex-direction: column;
        .title {
            color: var(--text-secondary);
            text-decoration: none;
            transition: ease-in 0.25s;
            padding-top: var(--spacer-ui-x-small);
            font-size: 14px;
            text-rendering: optimizeLegibility;
        }
        &:hover .title { color: var(--text-primary);  }
    }
</style>
<style is:global>
    .CodeSnippet .ImageContainer img {
        transform: scale(1);
        transition: ease-out 0.3s;
    }
    .CodeSnippet:hover .ImageContainer img {
        transform: scale(1.1);
    }
</style>