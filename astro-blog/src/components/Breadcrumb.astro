---
import { Icon } from 'astro-icon'
export interface Props {
	firstTitle?: string;
  firstLink?: string;
  pageTitle?: string;
  cssClass?: string;
}

const { firstTitle = "Portfolio", firstLink, pageTitle = "Employee Navigator", cssClass = "large" } = Astro.props;
---

<div class:list={[ 'breadcrumb', cssClass ]}>
  <a class="text" href={firstLink}>{firstTitle}</a>
  <div class="icon divider"><Icon name="carbon:chevron-right" /></div>
  <div class="text selected">{pageTitle}</div>
</div>

<style lang="scss">

:root {
  --ui-padding-default: 50px 42px;
  --ui-border-radius-default: 12px;
  --brand-text-primary: #171717;
  --brand-text-tertiary: #9A9A9A;
  --brand-text-accent: #171717;
}

.breadcrumb {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  gap: 4px;
  color: var(--brand-text-tertiary);

  &.large {
    font-size: 24px;
    line-height: 32px;
    letter-spacing: 0.48px;
  }
  &.small {
    font-size: 14px;
    line-height: 18px;
    .icon.divider { padding: 2px 2px 0 2px; }
  }
  .text {
    text-rendering: optimizeLegibility;
    color: var(--brand-text-tertiary);
    text-decoration: none;

    &.selected {
      cursor: default;
      color: var(--brand-text-primary);
    }
  }
  a {
    color:  var(--brand-text-tertiary);
    transition: color 0.2s ease-in-out;
    &:hover {
      color: var(--brand-text-accent);
    }
  }
  &.style-overlay {
    cursor: default;
    color: var(--grey-300, #A6ADAF);
    a, .text, .icon {
      color: var(--grey-300, #A6ADAF);
      &:hover { color: var(--grey-300, #A6ADAF); }
    }
    .text.selected {
      color: var(--grey-100);
    }
  }
}


.icon.divider {
  padding: 0;
  margin: 0;
  width: 20px;
  height: auto;
}

</style>